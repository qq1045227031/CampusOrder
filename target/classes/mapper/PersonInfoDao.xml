<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.imooc.o2o.dao.PersonInfoDao">
    <select id="queryPersonInfoList" resultType="com.imooc.o2o.entity.PersonInfo">
        SELECT
        user_id,
        name,
        email,
        gender,
        profile_img,
        user_type,
        create_time,
        last_edit_time,
        enable_status,
        phone,
        address
        FROM
        tb_person_info
        <where>
            <if test="personInfoCondition.userType != null">
                and user_type = #{personInfoCondition.userType}
            </if>
            <if test="personInfoCondition.gender != null">
                and gender =
                #{personInfoCondition.gender}
            </if>
            <!-- 写like语句的时候 一般都会写成 like '% %' 在mybatis里面写就是应该是 like '%${name} %' 而不是
                '%#{name} %' ${name} 是不带单引号的，而#{name} 是带单引号的 -->
            <if test="personInfoCondition.name != null">
                and name like '%${personInfoCondition.name}%'
            </if>
            <if test="personInfoCondition.enableStatus != null">
                and enable_status = #{personInfoCondition.enableStatus}
            </if>
            <if test="personInfoCondition.phone != null">
                and phone like '%${personInfoCondition.phone}%'
            </if>
            <if test="personInfoCondition.address != null">
                and address like '%${personInfoCondition.address}%'
            </if>
        </where>
        ORDER BY
        create_time DESC
        LIMIT #{rowIndex},#{pageSize};
    </select>
    <select id="queryPersonInfoCount" resultType="int">
        SELECT
        count(1)
        FROM
        tb_person_info
        <where>
            <if test="personInfoCondition.userType != null">
                and user_type = #{personInfoCondition.userType}
            </if>
            <if test="personInfoCondition.gender != null">
                and gender =
                #{personInfoCondition.gender}
            </if>
            <!-- 写like语句的时候 一般都会写成 like '% %' 在mybatis里面写就是应该是 like '%${name} %' 而不是
                '%#{name} %' ${name} 是不带单引号的，而#{name} 是带单引号的 -->
            <if test="personInfoCondition.name != null">
                and name like '%${personInfoCondition.name}%'
            </if>
            <if test="personInfoCondition.enableStatus != null">
                and enable_status = #{personInfoCondition.enableStatus}
            </if>
            <if test="personInfoCondition.phone != null">
                and phone like '%${personInfoCondition.phone}%'
            </if>
            <if test="personInfoCondition.address != null">
                and address like '%${personInfoCondition.address}%'
            </if>
        </where>
    </select>
    <select id="queryPersonInfoById" resultType="com.imooc.o2o.entity.PersonInfo"
            parameterType="Long">
        <!-- 具体的sql -->
        SELECT
        user_id,
        name,
        gender,
        email,
        profile_img,
        user_type,
        create_time,
        last_edit_time,
        enable_status,
        address,
        phone
        FROM
        tb_person_info
        WHERE
        user_id = #{userId}
    </select>
    <insert id="insertPersonInfo" parameterType="com.imooc.o2o.entity.PersonInfo"
            useGeneratedKeys="true" keyProperty="userId" keyColumn="user_id">
		INSERT
		INTO
		tb_person_info(name,gender,email,profile_img,user_type,create_time,last_edit_time,enable_status,address,phone)
		VALUES
		(#{name},#{gender},#{email},#{profileImg},#{userType},
		#{createTime},#{lastEditTime},#{enableStatus},#{address},#{phone})
	</insert>
    <update id="updatePersonInfo" parameterType="com.imooc.o2o.entity.PersonInfo">
        update tb_person_info
        <set>
            <if test="name != null">name=#{name},</if>
<!--            <if test="birthday != null">birthday=#{birthday},</if>-->
            <if test="gender != null">gender=#{gender},</if>
            <if test="phone != null">phone=#{phone},</if>
            <if test="email != null">email=#{email},</if>
            <if test="profileImg != null">profile_img=#{profileImg},</if>
            <if test="userType != null">user_type=#{userType},</if>
            <if test="address != null">address=#{address},</if>
            <if test="createTime != null">create_time=#{createTime},</if>
            <if test="lastEditTime != null">last_edit_time=#{lastEditTime},</if>
            <if test="enableStatus != null">enable_status=#{enableStatus}</if>
        </set>
        where user_id=#{userId}
    </update>
    <delete id="deletePersonInfo">
		DELETE FROM
		tb_person_info
		WHERE
		user_id =
		#{userId}
	</delete>

</mapper>